<h2>コメントのまとめ</h2>
<p>
  <% postable.comments.each do |comment| %>
    <tr>
      <td><%= comment.text %></td>
      <td><%= l comment.created_at, format: :long %></td>
      <td>
        <% if comment.user.name.empty? %>
          <%= comment.user.email %>
        <% else %>
          <%= comment.user.name %>
        <% end %>
      </td>
      <% if comment.user_id == current_user.id %>
        <td><%= link_to 'Edit', comment %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'よろしいでしょうか?' } %></td>
      <% end %>
      <br>
    </tr>
  <% end %>
</p>
