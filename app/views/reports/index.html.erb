<h1><%= Report.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:text) %></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.text %></td>
        <td><%= link_to '詳細', report_path(report)  %></td>
        <td><%= link_to '削除',report_path(report), method: :delete, data: { confirm: 'よろしいでしょうか？' } %></td>
        </br>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '日記の新規作成', new_report_path %>
