<p id="notice"><%= notice %></p>

<h1>books</h1>

<table>
  <thead>
    <tr>
      <th><%= t 'book_info.title' %></th>
      <th><%= t 'book_info.memo' %></th>
      <th><%= t 'book_info.author' %></th>
      <th><%= t 'book_info.picture' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to (t 'button.show'), book %></td>
        <td><%= link_to (t 'button.edit'), edit_book_path(book) %></td>
        <td><%= link_to (t 'button.destroy'), book, method: :delete, data: { confirm: (t 'message.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

